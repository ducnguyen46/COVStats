<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp">
            <TextView
                android:id="@+id/titleNewsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:textSize="16sp"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/sf_pro_display"
                android:textFontWeight="600"

                android:text="TP Hồ Chí Minh phong tỏa con hẻm có bệnh nhân nhiễm Covid-19"/>
            <TextView
                android:id="@+id/desNewsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"

                android:textSize="14sp"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/sf_pro_display"
                android:textFontWeight="400"

                android:text="TP Hồ Chí MinhTP Hồ Chí TP Hồ Chí Minh phong tỏa con hẻm có bệnh nhân nhiễm Covid-19. Được biết con ngõ này chủ yếu là các công nhân thuê nhà. Bệnh nhân lần này thuộc hội truyền giáo phục hưng cdg đấy."/>

            <TextView
                android:id="@+id/dateNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:gravity="right"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display"
                android:textFontWeight="400" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>