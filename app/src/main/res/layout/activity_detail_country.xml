<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.countryfragment.DetailCountryActivity"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:background="@color/white"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/border_radius_corner">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgFlagDetail"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_launcher_foreground"/>
                <TextView
                    android:id="@+id/nameDetailTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/sf_pro_display"
                    android:textSize="22sp"
                    android:textFontWeight="600"
                    android:textColor="@color/primary_black"
                    android:text="Vietnam"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/neutral_gray60"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/totalCaseDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="600"
                    android:textSize="28sp"
                    android:textColor="@color/primary_red"
                    android:text="3,000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="400"
                    android:textColor="@color/primary_black"
                    android:textSize="16sp"
                    android:text=" total case reported"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/newCaseDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="600"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:text="+3,000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="400"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:text=" new case reported today"/>
            </LinearLayout>

            <!-- -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/totalRecoveredDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="600"
                    android:textSize="28sp"
                    android:textColor="@color/neutral_green"
                    android:text="3,000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="400"
                    android:textColor="@color/primary_black"
                    android:textSize="16sp"
                    android:text=" total recovered reported"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/newRecoveredDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="600"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:text="+3,000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="400"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:text=" new recovered reported today"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/totalDeathDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="600"
                    android:textSize="28sp"
                    android:textColor="@color/primary_black"
                    android:text="3,000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="400"
                    android:textColor="@color/primary_black"
                    android:textSize="16sp"
                    android:text=" total death case reported"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/newDeathDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="600"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:text="+3,000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display"
                    android:textFontWeight="400"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:text=" new death case reported today"/>
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/moreNewsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingRight="75dp"
            android:background="@drawable/buttonred_whitetext"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:text="More news in Vietnam"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_pro_text"
            android:textFontWeight="400"
            android:textSize="16sp" />

        <Button
            android:id="@+id/moreInfoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingRight="75dp"
            android:background="@drawable/buttonred_whitetext"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:text="Vaccine tracker in Vietnam"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_pro_text"
            android:textFontWeight="400"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>